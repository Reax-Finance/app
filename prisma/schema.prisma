generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  // Wallet Address
  id       String  @id @db.VarChar(255)
  // Amount of XP Earned
  balance  Int     @default(0)
  // Unique username
  username String? @unique @db.VarChar(255)

  // Allowlisted Record
  allowlistedUser AllowlistedUser? @relation(fields: [id], references: [id])

  // Referral Data
  accessCodes AccessCode[] @relation(name: "AccessCode")
  joinedBy    AccessCode?  @relation(name: "JoinedBy")

  // Meta
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt @db.Timestamp(6)
}

model AccessCode {
  id String @id @db.VarChar(255)

  joinedUserId String? @unique
  joinedUser   User?   @relation(name: "JoinedBy", fields: [joinedUserId], references: [id])
  userId       String
  user         User    @relation(name: "AccessCode", fields: [userId], references: [id])
}

model AllowlistedUser {
  // Wallet Address
  id String @id

  user User?
}
